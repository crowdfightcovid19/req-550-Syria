	author = {Gatto, Marino and Bertuzzo, Enrico and Mari, Lorenzo and Miccoli, Stefano and Carraro, Luca and Casagrandi, Renato and Rinaldo, Andrea},
	month = may,
	year = {2020},
	pmid = {32327608},
	keywords = {disease outbreak scenarios, SARS-CoV-2, SEIR models, social contact restrictions, spatially explicit epidemiology},
	pages = {10484--10491},
	file = {Full Text PDF:/Users/jdklein/Zotero/storage/F6GALBSF/Gatto et al. - 2020 - Spread and dynamics of the COVID-19 epidemic in It.pdf:application/pdf;Snapshot:/Users/jdklein/Zotero/storage/E2UZJ95X/10484.html:text/html}
